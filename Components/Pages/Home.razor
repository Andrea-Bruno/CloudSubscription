@using System.IO
@using Markdig
@page "/"
<style>
    .markdown-content h1 {
        font-size: 2rem;
        color: #333;
    }

    .markdown-content p {
        line-height: 1.6;
    }

    .markdown-content ul {
        padding-left: 1.5rem;
    }
</style>

<PageTitle>Cloud storage service subscription</PageTitle>

<div class="markdown-content">
    @((MarkupString)RenderedMarkdown)
</div>

<a class="btn btn-primary" href="@LinkRegisterNow">Register Now</a>

@code {
    private string RenderedMarkdown;

    private string LinkRegisterNow = "/nav/" + typeof(Panels.CreateNewSubscription).GUID.ToString();

    protected override void OnInitialized()
    {
        var markdown = File.ReadAllText("HOME.md");
        RenderedMarkdown = Markdown.ToHtml(markdown);
    }
}